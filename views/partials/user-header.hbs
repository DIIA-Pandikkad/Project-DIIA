<div class="container" id="toast">
  <div aria-live="polite" aria-atomic="true" class="position-relative">
    <!-- Position it: -->
    <!-- - `.toast-container` for spacing between toasts -->
    <!-- - `top-0` & `end-0` to position the toasts in the upper right corner -->
    <!-- - `.p-3` to prevent the toasts from sticking to the edge of the container  -->
    <div class="toast-container top-0 end-0 p-3">

      <!-- Then put toasts within -->
      {{#each announcement}}
      <div class="toast liveToast" data-bs-delay="5000" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
          <img src="https://www.aryagroupbly.in/wp-content/uploads/2020/05/new-gif.gif" alt="">
          <i class="fa-solid fa-bullhorn pe-1 ps-1"> </i>
          <strong class="me-auto">{{this.annTitle}}</strong>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
          {{this.annDescrip}}
          {{#if this.annLinks}}
          <div class="mt-2 pt-2 border-top">
            <a href="{{this.annLinks}}" target="_blank"><button type="button" class="btn btn-primary btn-sm">Take
                action</button></a>
          </div>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
<script>
  const toastTrigger = document.getElementById('toastBtn')
  const toastLiveExamples = document.querySelectorAll('.liveToast')
  const toastInstances = []

  // Create toast instances
  toastLiveExamples.forEach((toastEl) => {
    const toast = new bootstrap.Toast(toastEl)
    toastInstances.push(toast)
  })

  if (toastTrigger) {
    toastTrigger.addEventListener('click', () => {
      toastInstances.forEach((toast) => {
        // If the toast is showing, hide it. Otherwise, show it.
        if (toast._element.classList.contains('show')) {
          toast.hide()
        } else {
          toast.show()
        }
      })
    })
  }
</script>