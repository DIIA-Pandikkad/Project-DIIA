<style>
    .blog-page {
        width: 70%;
        margin: 0 auto;
    }

    .blog-page .blog-box .blog-img {
        margin-bottom: 20px;
    }

    .blog-page .blog-box .blog-img img {
        width: 100%;
        height: 500px;
        object-fit: cover;
    }

    .blog-page .blog-box .blog-txt h2 {
        font-size: 35px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .blog-page .blog-box .blog-txt p {
        font-size: 20px;
        line-height: 30px;
    }

    .blog-page .blog-box .blog-txt .date {
        font-size: 14px;
        color: #b9b2b2;

    }

    .blog-page .blog-box .blog-txt .date hr {
        width: 100%;
        margin: 10px 0;
    }

    .blog-page .blog-box .blog-txt .social a {
        font-size: 20px;
        color: #b9b2b2;
        margin-right: 10px;

    }

    .blog-related {
        margin-top: 50px;
    }

    .blog-related h2 {
        font-size: 30px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .blog-related .blog-box .blog-img img {
        height: 300px;
    }

    .blog-related .blog-box .blog-txt h2 {
        font-size: 25px;
        margin-bottom: 10px;
    }

    .blog-related .blog-box .blog-txt p {
        font-size: 15px;
        line-height: 25px;
    }

    .blog-related .blog-box .blog-txt .date {
        font-size: 12px;
    }

    .blog-related .blog-box .blog-txt .date hr {
        margin: 5px 0;
    }

    .blog-related .blog-box .blog-txt .social a {
        font-size: 15px;
    }

    @media (max-width: 991px) {
        .blog-page {
            width: 90%;
        }

        .blog-page .blog-box .blog-img img {
            height: 300px;
        }

        .blog-page .blog-box .blog-txt h2 {
            font-size: 25px;
        }

        .blog-page .blog-box .blog-txt p {
            font-size: 15px;
        }

        .blog-page .blog-box .blog-txt .date {
            font-size: 12px;
        }

        .blog-page .blog-box .blog-txt .social a {
            font-size: 15px;
        }

        .blog-related .blog-box .blog-img img {
            height: 300px;
        }

        .blog-related .blog-box .blog-txt h2 {
            font-size: 25px;
        }

        .blog-related .blog-box .blog-txt p {
            font-size: 15px;
        }

        .blog-related .blog-box .blog-txt .date {
            font-size: 12px;
        }

        .blog-related .blog-box .blog-txt .social a {
            font-size: 15px;
        }
    }

    
</style>
<section>
    <div class="container">
        <div class="blog-page pt-5 pb-5">
            
            <div class="row">
                <div class="">
                    <div class="blog-box">
                        {{#each feeds}}
                        <div class="blog-img">
                            <img src="/images/uploads/{{this.photo}}" alt="#" />
                        </div>
                        <div class="blog-txt">
                            <h2>{{this.title}}</h2>
                            <p>{{this.content}}</p>
                            <div class="date">
                                <hr>
                                <div class="d-flex">
                                    <div class="flex-grow-1">
                                        <span>{{this.date}}</span>
                                    </div>
                                    <div class="social">
                                        <a href="https://www.facebook.com/profile.php?id=61552263635010"><i
                                                class="fa fa-facebook" aria-hidden="true"></i></a>
                                        <a href="https://www.youtube.com/@darulirfan8161"><i class="fa fa-youtube"
                                                aria-hidden="true"></i></a>
                                        <a href="https://whatsapp.com/channel/0029Va8uXSD9RZAXMrkoD43l"><i
                                                class="fa fa-whatsapp" aria-hidden="true"></i></a>
                                    </div>
                                </div>

                                <hr>
                            </div>

                        </div>
                        {{/each}}
                        <div class="blog-related">
                            <h2>Related Post</h2>
                            <div class="row">
                                {{#each relatedFeeds}}
                                <div class="col-md-4">
                                    <div class="blog-box">
                                        <div class="blog-img">
                                            <img src="/images/uploads/{{this.photo}}" alt="#" />
                                        </div>
                                        <div class="blog-txt">
                                            <h2>{{this.title}}</h2>
                                            <p>{{this.content}}</p>
                                            <div class="date">
                                                <hr>
                                                <div class="d-flex">
                                                    <div class="flex-grow-1">
                                                        <span>{{this.date}}</span>
                                                    </div>
                                                    <div class="social">
                                                        <a
                                                            href="https://www.facebook.com/profile.php?id=61552263635010"><i
                                                                class="fa fa-facebook" aria-hidden="true"></i></a>
                                                        <a href="https://www.youtube.com/@darulirfan8161"><i
                                                                class="fa fa-youtube" aria-hidden="true"></i></a>
                                                        <a href="https://whatsapp.com/channel/0029Va8uXSD9RZAXMrkoD43l"><i
                                                                class="fa fa-whatsapp" aria-hidden="true"></i></a>
                                                    </div>
                                                </div>

                                                <hr>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            
        </div>
    </div>
</section>