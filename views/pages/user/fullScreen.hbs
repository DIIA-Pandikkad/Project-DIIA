<div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        {{#each slides}}
        <div class="carousel-item {{#if @first}}active{{/if}}" data-bs-interval="3000">
            <!-- Use the same image path as the first one -->
           <img src="/images/uploads/media/{{slideImage}}" alt="Slide Image" class="d-block w-100">
        </div>
        {{/each}}
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<style>
    .carousel {
        height: 100vh; /* Full height of the viewport */
    }

    .carousel-item {
        height: 100vh; /* Full height of the viewport */
    }

    .carousel-item img {
        object-fit: cover;
        height: 100%; /* Make the image cover the entire height */
        width: 100%;  /* Make the image cover the entire width */
    }
</style>
