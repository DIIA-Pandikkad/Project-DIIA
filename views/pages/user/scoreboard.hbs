<script>
    document.querySelector('.exit').addEventListener('click', function () {
        window.location.href = '/fest';  // Replace with your target URL
    });
    // JavaScript to handle navigation and switching sections
    const navLinks = document.querySelectorAll('.nav-link');
    const sections = document.querySelectorAll('.content-section');

    navLinks.forEach(link => {
        link.addEventListener('click', function (event) {
            event.preventDefault();

            // Remove active class from all nav links
            navLinks.forEach(link => link.classList.remove('onwork'));
            this.classList.add('onwork');

            // Hide all sections and remove active-section class
            sections.forEach(section => section.classList.remove('active-section'));

            // Show the section that corresponds to the clicked link
            const sectionId = this.getAttribute('href').substring(1) + '-section';
            document.getElementById(sectionId).classList.add('active-section');
        });
    });
   document.getElementById('change-icon').addEventListener('click', function () {
    const currentPath = window.location.pathname;

    if (currentPath.includes('arts-scoreboard')) {
        window.location.href = '/sports-scoreboard';
    } else if (currentPath.includes('sports-scoreboard')) {
        window.location.href = '/arts-scoreboard';
    }
});



</script>